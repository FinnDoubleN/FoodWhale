@model IEnumerable<FoodWhale.Models.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="u-align-left u-container-style u-grey-5 u-group u-group-2">
    <a style="height:fit-content; margin-top: -2rem; margin-left: 1rem" asp-action="Create">Add</a>
    <table class="table" style="margin-left:-2.8rem">
        <thead>
            <tr>
                <th>
                    Recipe ID
                </th>
                <th>
                    Recipe Name
                </th>
                <th>
                    Image
                </th>
                <th>
                    Difficulty
                </th>
                <th>
                    Time
                </th>
                <th>
                    LikeCount
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category ID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Difficulty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CIdNavigation.CName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.RId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>