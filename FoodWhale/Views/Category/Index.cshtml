@model IEnumerable<FoodWhale.Model.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="u-align-left u-container-style u-grey-5 u-group u-group-2">
    <a style="height:fit-content; margin-top: -2rem; margin-left: 1rem" asp-action="Create">Add</a>
    <table class="table" style="margin-left:-2.8rem">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cname)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Cid">Edit</a><br />
                        <a asp-action="Delete" asp-route-id="@item.Cid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>