@model FoodWhale_User.Models.User
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login">
    <div class="form">
        <div class="selection-register selection">
            <input type="submit" name="login" value="Login" id="login">
            <input type="submit" name="register" value="Register" id="register">
        </div>
        <form asp-controller="Login" asp-action="Register" method="post">
            <div class="input-register flex">
                <input type="text" asp-for="Email" placeholder="Email" id="" required>
                <span asp-validation-for="Email"></span>
                <input type="text" asp-for="Password" placeholder="Password" id="" required>
                <span asp-validation-for="Password"></span>
                <input type="text" asp-for="UName" placeholder="Name" id="" required>
                <span asp-validation-for="UName"></span>
                <input type="submit" value="Register">
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
        document.getElementById("login").addEventListener("click", login);
        document.getElementById("register").addEventListener("click", register);

        function login() {
            var url = "@Url.Action("Login", "Login")";
            location.href = url;
        }

        function register() {
            var url = "@Url.Action("Register", "Login")";
            location.href = url;
        }
</script>