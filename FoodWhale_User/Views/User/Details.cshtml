@model FoodWhale_User.Models.User

@{
    var user = TempData["user"] as User;
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime date = Model.DoB;
    String dob = date.ToString("yyyy/MM/dd");
}

<div class="heading_container heading_center">
    <section class="details">
        <div class="details-box">
            <div class="user-avatar">
                <div class="avatar-container">
                    <div class="avatar"></div>
                    <p class="user-name">Manager</p>
                    <a asp-controller="User" asp-action="Details" class="user-info">Information</a>
                    <a asp-controller="Cart" asp-action="Index" class="user-cart">Cart</a>
                </div>
            </div>
            <div class="user-detail">
                <div class="rowUser">
                    <div class="frmUser">
                        <form asp-action="Edit" method="post" asp-route-id="@Model.UId">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UId" />
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" readonly />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UName" class="control-label"></label>
                                <input asp-for="UName" class="form-control" readonly />
                                <span asp-validation-for="UName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DoB" class="control-label"></label>
                                <input asp-for="DoB" type="date" class="form-control" readonly />
                                <span asp-validation-for="DoB" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <input asp-for="Gender" class="form-control" readonly />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" readonly />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" readonly />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="order_online" style="text-align: center;">
                                <a asp-action="Edit" asp-route-id="@Model.UId">Edit</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
