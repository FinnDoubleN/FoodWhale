@model IEnumerable<FoodWhale_User.Models.ViewModelIngredient>
@{ 
    var user = TempData["user"] as User;
    Layout = "~/Views/Shared/_Layout.cshtml";
    String check = "";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<div class="heading_container heading_center">
    <h2>
        Our Ingredient
    </h2>
</div>

<ul class="filters_menu">
    <li class="active" data-filter="*">All</li>
    @foreach (var item in Model)

    {
        if (item.category.CName == check) { }
        else
        {
<li data-filter=".@Html.DisplayFor(modelItem => item.category.CName)">@Html.DisplayFor(modelItem => item.category.CName)</li>
}
check = item.category.CName;
}
</ul>

<div class="filters-content">
    <div class="row grid">
        @foreach (var item in Model)
        {
<div class="col-sm-6 col-lg-4 all @Html.DisplayFor(modelItem => item.category.CName)">
    <div class="box">
        <div>
            <div class="img-box">
                <img src="@Html.DisplayFor(modelItem => item.ingredient.Image)" alt="">
            </div>
            <div class="detail-box">
                <a asp-controller="Ingredient" asp-action="Details" style="color:#fff; font-weight:600; font-size: 1.25rem;">
                    @Html.DisplayFor(modelItem => item.ingredient.InName)
                </a>
                <p style="color: #fff">
                    @Html.DisplayFor(modelItem => item.ingredient.Description)
                </p>
                <div class="options">
                    <h6>
                        Price: @string.Format(info, "{0:C}", item.ingredient.Price) / @Html.DisplayFor(modelItem => item.ingredient.Type)
                    </h6>
                </div>
            </div>
        </div>
    </div>
</div>}
    </div>
</div>